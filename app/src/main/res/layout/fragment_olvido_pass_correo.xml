<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.olvido_pass_correo">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="490dp"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="506dp"
            android:layout_height="894dp"
            android:scaleType="centerCrop"
            android:src="@drawable/aqpnoche"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:layout_width="415dp"
            android:layout_height="624dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="160dp"
            android:background="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </FrameLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:layout_marginStart="164dp"
            android:layout_marginTop="94dp"
            android:src="@drawable/logo_app_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="148dp"
            android:layout_marginTop="250dp"
            android:text="¿Olvidaste tu"
            android:textColorLink="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="290dp"
            android:text="contraseña?"
            android:textColorLink="#000000"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="115dp"
            android:layout_marginTop="360dp"
            android:text="Te enviaremos un código a tu"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginTop="387dp"
            android:text="dirección de correo electrónico para"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginTop="414dp"
            android:paddingStart="1px"
            android:paddingLeft="1px"
            android:text="que recuperes el acceso a tu cuenta"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginTop="493dp"
            android:text="Correo electrónico o Nombre de"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="156dp"
            android:layout_marginTop="740dp"
            android:text="Regresar a iniciar sesión"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="86dp"
            android:layout_marginTop="522dp"
            android:text="Usuario"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="314dp"
            android:layout_height="50dp"
            android:layout_marginStart="86dp"
            android:layout_marginTop="586dp"
            android:background="#FCF0BF"
            android:ems="10"
            android:hint="Correo o usuario"
            android:inputType="text"
            android:padding="2px"
            android:paddingStart="2px"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="306dp"
            android:layout_height="51dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="652dp"
            android:layout_marginBottom="189dp"
            android:background="#FF7F50"
            android:backgroundTint="@color/material_dynamic_secondary20"
            android:text="Recibir código"
            android:textColorLink="#FF7F50"
            app:iconTint="#FF7F50"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#FF7F50" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>